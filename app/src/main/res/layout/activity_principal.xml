<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inicio"
    android:orientation="vertical"
    tools:context=".Principal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Titulo"
        android:text="TURISMO IMPERIAL S.R.L."
        android:textColor="@android:color/holo_red_dark"
        android:background="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bienVenido"
        android:text="Presentación"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Titulo"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/presentacion"
        android:lines="7"
        android:text="Somos una empresa Arequipeña que brindamos
servicios de viajes turisticos a nivel nacional, tenemos la calidad que usted
busca para el viajes de sus sueños con los mejores lugares del Peru,
también tenemos las meojores ofertas en paquetes turisticos"
        android:textColor="@android:color/black"
        android:background="#c0c0c0"
        android:alpha="0.6"
        android:textStyle="italic"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bienVenido">
    </TextView>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seccioImagenes"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/presentacion">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffff00">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/arequipa">
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/cusco">
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/puno">
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/arequipa1">
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/huacachina">
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/norte">
            </ImageView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:src="@drawable/sierra">
            </ImageView>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seccionBotones"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/seccioImagenes"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/irRegistrar"
            android:layout_weight="2"
            android:layout_marginHorizontal="10dp"
            android:text="Registrar"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/borde2">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/irLogin"
            android:layout_weight="2"
            android:layout_marginHorizontal="10dp"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="16dp"
            android:background="@drawable/borde2">
        </Button>

    </LinearLayout>


</RelativeLayout>