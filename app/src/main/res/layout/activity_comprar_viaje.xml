<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/isla"
    android:orientation="vertical"
    tools:context=".ComprarViaje">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Titulo"
        android:text="TURISMO IMPERIAL S.R.L."
        android:textColor="@android:color/holo_red_dark"
        android:background="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblComprarViaje"
        android:text="Comprar Viajes"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/Titulo"
        android:layout_marginTop="10dp">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Contenderor1"
        android:background="#ffffff"
        android:alpha="0.9"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/lblComprarViaje">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtsubtitulo1"
            android:text="Arequipa"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/foto1"
            android:src="@drawable/arequipa1"
            android:layout_below="@+id/txtsubtitulo1">

        </ImageView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btnComprarArequipa"
            android:text="Comprar"
            android:textStyle="bold"
            android:textSize="10dp"
            android:background="@drawable/borde1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="100dp"
            android:layout_below="@+id/foto1">
        </Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_below="@+id/btnComprarArequipa">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Contenderor2"
        android:background="#ffffff"
        android:alpha="0.9"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/Contenderor1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtsubtitulo2"
            android:text="Cusco"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/foto2"
            android:src="@drawable/cusco"
            android:layout_below="@+id/txtsubtitulo2">

        </ImageView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btnComprarCusco"
            android:text="Comprar"
            android:textStyle="bold"
            android:textSize="10dp"
            android:background="@drawable/borde1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="100dp"
            android:layout_below="@+id/foto2">
        </Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_below="@+id/btnComprarCusco">
        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Contenderor3"
        android:background="#ffffff"
        android:alpha="0.9"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"
        android:layout_below="@+id/Contenderor2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtsubtitulo3"
            android:text="Puno"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp">
        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/foto3"
            android:src="@drawable/puno"
            android:layout_below="@+id/txtsubtitulo3">

        </ImageView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/btnComprarPuno"
            android:text="Comprar"
            android:textStyle="bold"
            android:textSize="10dp"
            android:background="@drawable/borde1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="100dp"
            android:layout_below="@+id/foto3">
        </Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:layout_below="@+id/btnComprarPuno">
        </TextView>

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Regresar5"
        android:background="@drawable/borde2"
        android:text="Volver a Menu de Opciones"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@drawable/volver"
        android:layout_below="@+id/Contenderor3">

    </Button>

</RelativeLayout>