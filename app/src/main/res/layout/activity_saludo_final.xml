<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    tools:context=".SaludoFinal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Titulo"
        android:text="TURISMO IMPERIAL S.R.L."
        android:textColor="@android:color/holo_red_dark"
        android:background="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblSaludoFinal"
        android:text="Felicidades"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/Titulo"
        android:layout_marginTop="40dp">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/contenedorSaludoFinal"
        android:background="#ffffff"
        android:alpha="0.9"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/lblSaludoFinal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/contenedor1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl1"
                android:text="Estimado cliente: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblMostrarNomFinal"
                android:text="---"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="#e6f89e"
                android:layout_marginTop="15dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/contenedor2"
            android:layout_below="@+id/contenedor1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl2"
                android:text="Su destino es a: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblMostrarDestino"
                android:text="---"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="#e6f89e"
                android:layout_marginTop="15dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/contenedor3"
            android:layout_below="@+id/contenedor2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl3"
                android:text="Cantidad adultos: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblMostrarAdultos"
                android:text="---"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="#e6f89e"
                android:layout_marginTop="15dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/contenedor4"
            android:layout_below="@+id/contenedor3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl4"
                android:text="Cantidad niÃ±os: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblMostrarNinio"
                android:text="---"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="#e6f89e"
                android:layout_marginTop="15dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/contenedor5"
            android:layout_below="@+id/contenedor4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl5"
                android:text="Modalidad: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblMostrarModalidad"
                android:text="---"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="#e6f89e"
                android:layout_marginTop="15dp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/contenedor6"
            android:layout_below="@+id/contenedor5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl6"
                android:text="Costo de viaje: "
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblMostrarPrecio"
                android:text="---"
                android:textStyle="bold"
                android:textSize="18dp"
                android:background="#e6f89e"
                android:layout_marginTop="15dp">
            </TextView>
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Regresar7"
        android:background="@drawable/borde2"
        android:text="Volver a Menu Principal"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@drawable/volver"
        android:layout_below="@+id/contenedorSaludoFinal">

    </Button>

</RelativeLayout>