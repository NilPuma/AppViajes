<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    tools:context=".RegistroUsuario">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Titulo"
        android:text="TURISMO IMPERIAL S.R.L."
        android:textColor="@android:color/holo_red_dark"
        android:background="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblRegistroUsuario"
        android:text="Registro de Usuario"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/Titulo"
        android:layout_marginTop="10dp">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contenedorRegistroUsuario"
        android:background="#ffffff"
        android:alpha="0.9"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/lblRegistroUsuario">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombre"
            android:hint="Nombres"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/addusuario">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtApellido"
            android:hint="Apellidos"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/addusuario"
            android:layout_below="@+id/txtNombre">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDni"
            android:hint="DNI"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/dni"
            android:layout_below="@+id/txtApellido">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCelular"
            android:hint="Celular"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/celular"
            android:layout_below="@+id/txtDni">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCorreo"
            android:hint="Correo"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
            android:layout_below="@+id/txtCelular">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsuarioRegistro"
            android:hint="Usuario"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/usuario"
            android:layout_below="@+id/txtCorreo">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPasswordRegistro"
            android:hint="ContraseÃ±a"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/password"
            android:layout_below="@+id/txtUsuarioRegistro">
        </EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRegistrarUsuario"
            android:background="@drawable/borde1"
            android:text="Registrar Usuario"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@id/txtPasswordRegistro">

        </Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRegistrarUsuario">
        </TextView>

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Regresar2"
        android:background="@drawable/borde2"
        android:text="Volver a Menu Principal"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@drawable/volver"
        android:layout_below="@+id/contenedorRegistroUsuario">

    </Button>

</RelativeLayout>