<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Titulo"
        android:text="TURISMO IMPERIAL S.R.L."
        android:textColor="@android:color/holo_red_dark"
        android:background="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblLoin"
        android:text="LOGIN"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:alpha="0.8"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/Titulo"
        android:layout_marginTop="40dp">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contenedorLogin"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="#ffffff"
        android:alpha="0.9"
        android:layout_below="@id/lblLoin">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsuario"
            android:hint="Usuario"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/usuario">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"
            android:inputType="textPassword"
            android:hint="ContraseÃ±a"
            android:textAlignment="center"
            android:layout_below="@+id/txtUsuario"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/password">
        </EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogin"
            android:background="@drawable/borde1"

            android:text="Iniciar Session"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_below="@+id/txtPassword">
        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin">
        </TextView>

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Regresar1"
        android:background="@drawable/borde2"
        android:text="Volver a Menu Principal"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp"
        android:drawableLeft="@drawable/volver"
        android:layout_below="@+id/contenedorLogin">

    </Button>



</RelativeLayout>